<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tianqi.MapActivity"
    android:orientation="vertical">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:clickable="true" />
    <LinearLayout android:id="@+id/LinearLayout002"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_map_find"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/anliu_1"
        android:hint="查询"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_map_esc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/anliu_1"
        android:hint="退出"
        android:textColor="#fff"
        android:textSize="20sp" />
    </LinearLayout>
    <Spinner
        android:id="@+id/map_places"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/user_name"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#FFAD33"
        android:textSize="18sp" />
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView android:id="@+id/map_results"
                android:text=""
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
